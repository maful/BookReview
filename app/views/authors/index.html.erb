<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Data Authors</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="text-left">
          <%= link_to new_author_path, class: 'btn btn-sm btn-primary' do %>
            <%= fa_icon "plus" %> Add
          <% end %>
          <%= link_to authors_path, class: 'btn btn-sm btn-success' do %>
            <%= fa_icon "refresh" %> Refresh
          <% end %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="text-right">
          <%= form_tag authors_path, :method => 'get' do %>
            <div class="col-md-5 col-md-offset-7 col-xs-12">
              <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search Authors' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <% if @authors.present? %>
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th class="text-center">No</th>
            <th class="text-center">Name</th>
            <th class="text-center">Biography</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @authors.each_with_index do |author, index| %>
            <tr>
              <td class="text-center"><%= index + 1 %></td>
              <td><%= author.name %></td>
              <td><%= author.biography[0..100] %> ...</td>
              <td class="text-center">
                <%= link_to "Show", author_path(author), class: 'btn btn-sm btn-info' %>
                <%= link_to "Edit", edit_author_path(author), class: 'btn btn-sm btn-primary' %>
                <%= link_to "Delete", author_path(author), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pull-right">
        <div class="pagination">
          <%= will_paginate @authors %>
        </div>
      </div>
    <% else %>
      <p>There are no author containing the name <strong><%= params[:search] %></strong>.</p>
    <% end %>
  </div>
</div>
